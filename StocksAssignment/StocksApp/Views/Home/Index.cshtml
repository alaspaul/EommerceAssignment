@model StocksApp.Models.Stock
@{
    ViewBag.Title = "Home";
}

<h1>Home</h1>

<div class="box trading-panel">
    <div class="flex trading-panel-flex">
        <div id="stock-price-panel">
            <div class="stock">
                <h1 class="stock-title">@Model.StockSymbol</h1>
                <table>
                    <tbody>
                        <tr>
                            <td>current:</td>
                            <th>
                                <small>$</small>
                                <span>
                                    @Model.CurrentPrice.ToString("N")
                                </span>
                             </th>
                        </tr>

                        <tr>
                            <td>highest:</td>
                            <th>
                                <small>$</small>
                                <span>
                                    @Model.HighestPrioce.ToString("N")
                                </span>
                            </th>
                        </tr>

                        <tr>
                            <td>lowest:</td>
                            <th>
                                <small>$</small>
                                <span>
                                    @Model.LowestPrioce.ToString("N")
                                </span>
                            </th>
                        </tr>

                        <tr>
                            <td>Open:</td>
                            <th>
                                <small>$</small>
                                <span>
                                    @Model.OpenPrice.ToString("N")
                                </span>
                            </th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>